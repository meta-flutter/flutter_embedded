SET(CMAKE_SYSTEM_VERSION 1)
set(CMAKE_SYSTEM_NAME Linux)
set(CMAKE_SYSTEM_PROCESSOR @TARGET_ARCH@)

#compiler
SET(CMAKE_C_COMPILER @TOOLCHAIN_DIR@/bin/clang)
SET(CMAKE_CXX_COMPILER @TOOLCHAIN_DIR@/bin/clang++)

# sysroot
SET(CMAKE_SYSROOT @TARGET_SYSROOT@)
SET(CMAKE_FIND_ROOT_PATH @TARGET_SYSROOT@)
set(CMAKE_FIND_ROOT_PATH_MODE_PROGRAM NEVER)
set(CMAKE_FIND_ROOT_PATH_MODE_LIBRARY ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_INCLUDE ONLY)

# compiler flags
set(CMAKE_C_FLAGS "${CMAKE_C_FLAGS} --target=@TARGET_TRIPLE@ -v")
set(CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS} --target=@TARGET_TRIPLE@ -v")
set(CMAKE_EXE_LINKER_FLAGS "${CMAKE_EXE_LINKER_FLAGS} -v -nodefaultlibs -L@TOOLCHAIN_DIR@/lib -lc -fuse-ld=gold")
set(CMAKE_SHARED_LINKER_FLAGS "${CMAKE_SHARED_LINKER_FLAGS} -v -nodefaultlibs -L@TOOLCHAIN_DIR@/lib -lc -fuse-ld=gold")